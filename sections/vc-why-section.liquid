{% schema %}
{
  "name": "VC Why Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why ViralChoice?"
    },
    {
      "type": "text",
      "id": "point1_title",
      "label": "Point 1 Title",
      "default": "Curated Selection"
    },
    {
      "type": "textarea",
      "id": "point1_text",
      "label": "Point 1 Text",
      "default": "We handpick only the most viral and effective products that have proven results."
    },
    {
      "type": "text",
      "id": "point2_title",
      "label": "Point 2 Title",
      "default": "Lightning Fast"
    },
    {
      "type": "textarea",
      "id": "point2_text",
      "label": "Point 2 Text",
      "default": "Get your products delivered quickly so you can start enjoying them right away."
    },
    {
      "type": "text",
      "id": "point3_title",
      "label": "Point 3 Title",
      "default": "Trusted Guarantee"
    },
    {
      "type": "textarea",
      "id": "point3_text",
      "label": "Point 3 Text",
      "default": "Your satisfaction is our priority. 30-day money-back guarantee on all products."
    }
  ],
  "presets": [
    {
      "name": "VC Why Section"
    }
  ]
}
{% endschema %}
