{% comment %}
  Trending Products Carousel
  Auto-scrolling horizontal carousel with products from selected collection
{% endcomment %}

{% if section.settings.collection != blank %}
  {% assign collection = collections[section.settings.collection] %}
  
  {% if collection.products.size > 0 %}
    <section class="trending-section">
      <div class="container">
        <div class="trending-section__header reveal">
          {% if section.settings.title != blank %}
            <h2 class="trending-section__title">{{ section.settings.title }}</h2>
          {% else %}
            <h2 class="trending-section__title">Trending Now</h2>
          {% endif %}
        </div>
        
        <div class="trending-carousel">
        <div class="trending-carousel__track">
          {% for product in collection.products limit: 10 %}
            <div class="trending-carousel__item">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 300 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="trending-carousel__image"
                    loading="lazy"
                  >
                {% else %}
                  <div class="trending-carousel__image" style="background: rgba(255,255,255,0.05);"></div>
                {% endif %}
                
                <h3 class="trending-carousel__title">{{ product.title }}</h3>
                
                <div class="trending-carousel__price">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="trending-carousel__price-compare">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
      </div>
    </section>
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Trending Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Trending Now"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select the collection to display products from"
    }
  ],
  "presets": [
    {
      "name": "Trending Carousel"
    }
  ]
}
{% endschema %}
