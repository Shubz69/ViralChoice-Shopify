{% comment %}
  ViralChoice Footer Section
  Minimal footer with policies and contact
{% endcomment %}

<footer class="vc-footer">
  <div class="vc-footer__inner">
    <p class="vc-footer__brand">
      {{ section.settings.footer_text | default: 'ViralChoice' }}
    </p>
    
    <nav class="vc-footer__links">
      {% if shop.policies.refund-policy %}
        <a href="{{ shop.policies.refund-policy.url }}" class="vc-footer__link">Refund Policy</a>
      {% endif %}
      {% if shop.policies.privacy-policy %}
        <a href="{{ shop.policies.privacy-policy.url }}" class="vc-footer__link">Privacy Policy</a>
      {% endif %}
      {% if shop.policies.terms-of-service %}
        <a href="{{ shop.policies.terms-of-service.url }}" class="vc-footer__link">Terms of Service</a>
      {% endif %}
      {% if pages.contact %}
        <a href="{{ pages.contact.url }}" class="vc-footer__link">Contact</a>
      {% endif %}
    </nav>
    
    <p class="vc-footer__copyright">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
    </p>
  </div>
</footer>

{% schema %}
{
  "name": "VC Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "ViralChoice"
    }
  ],
  "presets": [
    {
      "name": "VC Footer"
    }
  ]
}
{% endschema %}
