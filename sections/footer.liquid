{% comment %}
  ViralChoice Footer Section
  Minimal footer with policies and contact
{% endcomment %}

<footer class="vc-footer">
  <div class="vc-footer__inner">
    <div class="vc-footer__brand">
      {{ section.settings.footer_text | default: 'ViralChoice' }}
    </div>
    
    <nav class="vc-footer__links" style="display: flex; gap: var(--space-lg); flex-wrap: wrap; justify-content: center; margin: var(--space-md) 0;">
      {% if shop.policies.refund-policy %}
        <a href="{{ shop.policies.refund-policy.url }}" style="color: var(--muted); font-size: var(--text-sm); transition: var(--transition-fast);">Refund Policy</a>
      {% endif %}
      {% if shop.policies.privacy-policy %}
        <a href="{{ shop.policies.privacy-policy.url }}" style="color: var(--muted); font-size: var(--text-sm); transition: var(--transition-fast);">Privacy Policy</a>
      {% endif %}
      {% if shop.policies.terms-of-service %}
        <a href="{{ shop.policies.terms-of-service.url }}" style="color: var(--muted); font-size: var(--text-sm); transition: var(--transition-fast);">Terms of Service</a>
      {% endif %}
      {% if pages.contact %}
        <a href="{{ pages.contact.url }}" style="color: var(--muted); font-size: var(--text-sm); transition: var(--transition-fast);">Contact</a>
      {% endif %}
    </nav>
    
    <p class="vc-footer__copyright">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
    </p>
  </div>
</footer>

{% schema %}
{
  "name": "VC Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "ViralChoice"
    }
  ],
  "presets": [
    {
      "name": "VC Footer"
    }
  ]
}
{% endschema %}
