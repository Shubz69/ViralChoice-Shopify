{% comment %}
  Testimonials Section
  Customer testimonials with neutral wording
{% endcomment %}

<section class="testimonials-section">
  <div class="testimonials-grid reveal">
    {% if section.settings.testimonial_1_text != blank %}
      <div class="testimonial-card">
        <div class="testimonial-card__stars">★★★★★</div>
        <p class="testimonial-card__text">{{ section.settings.testimonial_1_text }}</p>
        <div class="testimonial-card__author">{{ section.settings.testimonial_1_author | default: 'Customer' }}</div>
      </div>
    {% endif %}
    
    {% if section.settings.testimonial_2_text != blank %}
      <div class="testimonial-card">
        <div class="testimonial-card__stars">★★★★★</div>
        <p class="testimonial-card__text">{{ section.settings.testimonial_2_text }}</p>
        <div class="testimonial-card__author">{{ section.settings.testimonial_2_author | default: 'Customer' }}</div>
      </div>
    {% endif %}
    
    {% if section.settings.testimonial_3_text != blank %}
      <div class="testimonial-card">
        <div class="testimonial-card__stars">★★★★★</div>
        <p class="testimonial-card__text">{{ section.settings.testimonial_3_text }}</p>
        <div class="testimonial-card__author">{{ section.settings.testimonial_3_author | default: 'Customer' }}</div>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "testimonial_1_text",
      "label": "Testimonial 1 Text",
      "default": "Great product, fast shipping, exactly as described."
    },
    {
      "type": "text",
      "id": "testimonial_1_author",
      "label": "Testimonial 1 Author",
      "default": "Customer"
    },
    {
      "type": "textarea",
      "id": "testimonial_2_text",
      "label": "Testimonial 2 Text",
      "default": "Really happy with my purchase. Would recommend."
    },
    {
      "type": "text",
      "id": "testimonial_2_author",
      "label": "Testimonial 2 Author",
      "default": "Customer"
    },
    {
      "type": "textarea",
      "id": "testimonial_3_text",
      "label": "Testimonial 3 Text",
      "default": "Quality product and excellent customer service."
    },
    {
      "type": "text",
      "id": "testimonial_3_author",
      "label": "Testimonial 3 Author",
      "default": "Customer"
    }
  ],
  "presets": [
    {
      "name": "Testimonials"
    }
  ]
}
{% endschema %}
