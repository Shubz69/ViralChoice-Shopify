{% comment %}
  ViralChoice Premium Header
  Sticky with blur, shrink on scroll, mobile menu
{% endcomment %}

<header class="vc-header">
  <div class="vc-header__inner">
    <a href="{{ routes.root_url }}" class="vc-logo">
      {{ section.settings.logo_text | default: 'ViralChoice' }}
    </a>
    
    <nav class="vc-nav">
      {% for link in linklists[section.settings.menu].links %}
        <a href="{{ link.url }}" class="vc-nav__link">
          {{ link.title }}
        </a>
      {% endfor %}
      
      <a href="{{ routes.cart_url }}" class="vc-cart-icon" aria-label="Cart">
        Cart
        {% if cart.item_count > 0 %}
          <span class="vc-cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </nav>

    <button class="vc-mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span style="font-size: 1.5rem;">☰</span>
    </button>
  </div>
</header>

<div class="vc-mobile-menu">
  <button class="vc-mobile-menu__close" aria-label="Close menu">×</button>
  <nav class="vc-mobile-menu__nav">
    {% for link in linklists[section.settings.menu].links %}
      <a href="{{ link.url }}" class="vc-mobile-menu__link">
        {{ link.title }}
      </a>
    {% endfor %}
    <a href="{{ routes.cart_url }}" class="vc-mobile-menu__link">
      Cart {% if cart.item_count > 0 %}({{ cart.item_count }}){% endif %}
    </a>
  </nav>
</div>

{% schema %}
{
  "name": "VC Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "ViralChoice"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
